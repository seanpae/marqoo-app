<div class="container">
	<div class="video">
		<div class="videoView">
			<% if @video.video.file? %>
				<video id="video" controls="controls">
						<source src="<%= @video.video.url(:medium) %>" type="video/mp4"> 
				</video>
			<% else %>
					<iframe width="100%" height="100%" src="<%= @video.video_source.gsub('watch?v=', 'embed/') %>" frameborder="0" allowfullscreen></iframe>
			<% end %>
		</div>
		<div class="videoInfo">
			<div class="title">
				<h2><%= @video.category.name %></h2>
				<p><%= @video.description %></p>
			</div>
			<div class="metrics">
				<p><%= @video.impressionist_count %> Views | <%= @comments.count %> Comments | <%= @video.likes.count %> Likes </p>
			</div>
		</div>
		<% if @comments.any? %>
			<div class="videoComments">
				<% @comments.each do |comment| %>
					<div class="comment">
						<div class="avatar">
							<%= image_tag comment.user.avatar.url(:thumb) %>
						</div>
						<div class="commentContent">
							<h2><%= comment.user.name %></h2>
							<p class="content"><%= comment.content %></p>
							<p><%= time_ago_in_words(comment.created_at) %> ago</p>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
		<div class="download">
				<!-- <a href="#" class="btn btn-default">Download for iPhone</a> -->
				<a href="https://play.google.com/store/apps/details?id=com.marqoo",  target="_blank" ><%= image_tag "googlestore.png", class: "appstorebutton" %></a>
				<a href="https://itunes.apple.com/us/app/marqoo/id1105142170?ls=1&mt=8" ,  target="_blank"><%= image_tag "applestore.png", class: "appstorebutton" %></a>
			</div>
	</div>

</div>
